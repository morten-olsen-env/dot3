#!/bin/bash

if [ ! -f "$HOME/.pushn" ]; then
  echo "No settings file in ~/.pushn"
  exit 1
fi

source "$HOME/.pushn"

MESSAGE="CMD: $(</dev/stdin)"
echo $MESSAGE

curl -s \
  --form-string "token=$APP_TOKEN" \
  --form-string "user=$USER_KEY" \
  --form-string "message=$MESSAGE" \
  https://api.pushover.net/1/messages.json > /dev/null
